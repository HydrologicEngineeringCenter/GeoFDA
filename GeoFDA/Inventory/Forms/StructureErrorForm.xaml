<Window x:Class="StructureErrorForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    DataContext="{Binding RelativeSource={RelativeSource Self}}" 
    Title="Individual Structure Error Report" Height="300" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <DataGrid Name="Errors" Grid.Row="0" Margin="5" AutoGenerateColumns="True" ItemsSource="{Binding Path=SICTN.Errors}"/>
        <Button Name="CmdOk" Content="Close" Grid.Row="1" Margin="5" HorizontalAlignment="Right"/>
    </Grid>
</Window>
