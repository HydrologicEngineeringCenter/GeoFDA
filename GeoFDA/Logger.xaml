<Window x:Class="Logger"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Log Viewer" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <RichTextBox Name="TheLog" Margin="5" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
            <Button Name="ClearButton" Content="Clear Log File" Margin="0,0,5,0"/>
            <Button Name="CloseButton" Content="Close"/>
        </StackPanel>
    </Grid>
</Window>
